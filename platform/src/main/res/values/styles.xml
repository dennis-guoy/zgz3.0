<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_bj</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
    </style>
    <style name="bantouming">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
    <!-- 照片选择 theme -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

       <!-- <item name="android:windowIsTranslucent">true</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>



    <!--toolbar替代actionbar后必须设置主题为NoActionBar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--控制头部据appbar的样式-->

    <!--用于控制toolbar溢出菜单的样式-->

    <!--自定义Dialog -->
    <!-- 超小字体 - 适应单位 -->
    <style name="fontsize_super_small_sp">
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 超小字体 - 固定单位 -->
    <style name="fontsize_super_small_dp">
        <item name="android:textSize">12dp</item>
    </style>
    <!-- 小字体 - 适应单位 -->
    <style name="fontsize_small_sp">
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 小字体 - 固定单位-->
    <style name="fontsize_small_dp">
        <item name="android:textSize">14dp</item>
    </style>
    <!-- 标准字体 - 适应单位 -->
    <style name="fontsize_nomal_sp">
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 标准字体 - 固定单位 -->
    <style name="fontsize_nomal_dp">
        <item name="android:textSize">16dp</item>
    </style>
    <!-- 大字体 - 适应单位 -->
    <style name="fontsize_big_sp">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- 大字体 - 固定单位 -->
    <!-- 超大字体 - 适应单位-->
    <!-- 超大字体 - 固定单位-->
    <!-- 特大字体 - 适应单位 -->
    <style name="fontsize_most_big_sp">
        <item name="android:textSize">48sp</item>
    </style>
    <!-- 特大字体 - 固定单位 -->
</resources>
